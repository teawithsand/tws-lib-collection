{
  "name": "@teawithsand/fstate",
  "version": "0.0.1",
  "description": "Tools for state management including, but not limited to, event busses and wrappers for jotai",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format:fix": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "lint": "eslint ./src --max-warnings 0",
    "lint:fix": "eslint ./src --fix",
    "drizzle:generate": "drizzle-kit generate",
    "test:mutate": "stryker run",
    "test": "vitest",
    "test:ss": "vitest -u",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "fix": "npm run format:fix && npm run lint:fix",
    "pre-commit-check": "npm run build:check && npm run lint && npm run format:check && npm run test",
    "prepublishOnly": "npm run build && npm run lint && npm run format:check && npm run test",
    "prepare": "husky"
  },
  "author": "teawithsand",
  "license": "MIT",
  "devDependencies": {
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-istanbul": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "idb": "^8.0.3"
  }
}
