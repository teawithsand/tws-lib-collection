{
  "name": "@teawithsand/player",
  "version": "0.0.1",
  "description": "Advanced player using valtio for state management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format:fix": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "lint": "eslint ./src --max-warnings 0",
    "lint:fix": "eslint ./src --fix",
    "test:mutate": "stryker run",
    "test": "./fixDeps.sh && vitest",
    "test:ss": "./fixDeps.sh && vitest -u",
    "build": "tsc --project tsconfig.prod.json",
    "build:check": "tsc --noEmit",
    "fix": "npm run format:fix && npm run lint:fix",
    "pre-commit-check": " npm run build:check && npm run lint && npm run format:check",
    "prepublishOnly": "npm run build && npm run lint && npm run format:check && npm run test"
  },
  "author": "teawithsand",
  "license": "MIT",
  "devDependencies": {
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-istanbul": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-valtio": "^0.8.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@teawithsand/fstate": "^0.0.1",
    "valtio": "^2.1.5"
  }
}
