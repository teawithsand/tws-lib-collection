{
	"name": "@teawithsand/mintay-core",
	"version": "0.0.1",
	"description": "Core of Mintay SRS engine",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"format:fix": "prettier ./src --write",
		"format:check": "prettier ./src --check",
		"lint": "eslint ./src --max-warnings 0",
		"lint:fix": "eslint ./src --fix",
		"drizzle:generate": "drizzle-kit generate",
		"test:mutate": "stryker run",
		"test": "vitest",
		"test:ss": "vitest -u",
		"init": "husky",
		"build": "tsc --build --clean && tsc",
		"build:check": "tsc --noEmit",
		"fix": "npm run format:fix && npm run lint:fix",
		"pre-commit-check": "npm run build:check && npm run lint && npm run format:check",
    	"pre-push-check": "npm run build:check && npm run lint && npm run format:check && npm run test",
		"prepublishOnly": "npm run build && npm run lint && npm run format:check && npm run test"
	},
	"author": "teawithsand",
	"license": "AGPL-3.0-only",
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@eslint/json": "^0.12.0",
		"@stryker-mutator/vitest-runner": "~9.0.1",
		"@types/better-sqlite3": "^7.6.13",
		"@typescript-eslint/eslint-plugin": "^8.32.0",
		"@typescript-eslint/parser": "^8.32.0",
		"@vitest/coverage-istanbul": "^3.1.3",
		"better-sqlite3": "^11.9.1",
		"drizzle-kit": "^0.31.0",
		"eslint": "^9.26.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.1",
		"vitest": "~3.1.3",
		"@teawithsand/sqlite-web": "workspace:*"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.1",
		"immer": "^10.1.1",
		"ts-fsrs": "^4.7.1",
		"@teawithsand/lngext": "workspace:*",
		"@teawithsand/reserd": "workspace:*"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"peerDependencies": {
	  "zod": "~3.25.42"
	}
}
