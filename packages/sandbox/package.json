{
	"name": "@teawithsand/sandbox",
	"version": "0.0.1",
	"description": "Utility to run code in isolation in browser environment. Designed primarily for live code runners to showcase how some algorithms work.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"format:fix": "prettier ./src --write",
		"format:check": "prettier ./src --check",
		"format:check:cached": "prettier ./src --check --cache",
		"lint": "eslint ./src --max-warnings 0",
		"lint:cached": "eslint ./src --max-warnings 0 --cache",
		"lint:fix": "eslint ./src --fix",
		"test:mutate": "stryker run",
		"test": "vitest",
		"build": "rimraf dist && tsc --project tsconfig.prod.json",
		"build:check": "tsc --noEmit",
		"fix": "npm run format:fix && npm run lint:fix",
		"pre-commit-check": "npm run build:check && npm run lint:cached && npm run format:check:cached",
		"pre-push-check": "npm run build:check && npm run lint:cached && npm run format:check:cached && npm run test",
		"prepublishOnly": "npm run build && npm run lint && npm run format:check && npm run test"
	},
	"author": "teawithsand",
	"license": "MIT",
	"devDependencies": {
		"@stryker-mutator/vitest-runner": "~9.0.1",
		"@typescript-eslint/parser": "^8.32.0",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-istanbul": "~3.2.4",
		"eslint": "^9.26.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^16.1.0",
		"jsdom": "^26.1.0",
		"playwright": "^1.52.0",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.0",
		"vitest": "3.2.4",
		"react": "~19.1.0",
		"@vitest/ui": "~3.2.4",
		"fast-check": "~4.1.1",
		"rimraf": "~6.0.1"
	},
	"dependencies": {
		"@teawithsand/fstate": "workspace:*",
		"@teawithsand/reserd": "workspace:*",
		"@teawithsand/lngext": "workspace:*",
		"zod": "3.25.67",
		"@teawithsand/llog": "workspace:*"
	}
}
